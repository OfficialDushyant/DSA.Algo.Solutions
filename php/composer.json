{
    "name": "dushyantpatel/php",
    "version": "1.0.0",
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Specs\\": "specs/"
        }
    },
    "authors": [
        {
            "name": "Dushyant Patel",
            "email": "devops@bydushyant.com"
        }
    ],
    "scripts": {
        "cs": "vendor/bin/phpcs --standard=PSR2 ./src ./specs",
        "csf": "vendor/bin/phpcbf --standard=PSR2 ./src ./specs",
        "test": "vendor/bin/phpunit",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-html coverage"
    },
    "require": {},
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.11",
        "phpunit/phpunit": "^10.0"
    }
}